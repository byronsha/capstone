<!DOCTYPE html>
<html>

  <head>
    <title>omnify.xyz</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application', cache: true %>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

    <script>
      <% if signed_in? %>
        window.currentUserId = <%= current_user.id %>;
      <% else %>
        window.currentUserId = null;
      <% end %>
    </script>

    <script type="text/javascript">
      window.CLOUDINARY = {
        upload_preset: "<%=ENV['_FIGARO_CLOUDINARY_KEY']%>",
        cloud_name: "<%=ENV['_FIGARO_CLOUDINARY_CLOUD']%>",
      };
    </script>

    <script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>
  </head>

  <body>
    <div id="holder">
      <div id="body">
        <%= yield %>
      </div>
      <div id="footer">
        <ul>
          <li><a href="https://github.com/byronsha"><i class="fa fa-github"></i> Github</a></li>
          <li><a href="https://www.linkedin.com/profile/view?id=AAMAAA9RSn0BbUxs23pprebxpFncMxZzJgotagw&trk=hp-identity-name"><i class="fa fa-linkedin"></i> Linkedin</a></li>
          <li><a href="http://byronsha.tumblr.com/"><i class="fa fa-tumblr"></i> Blog</a></li>
        </ul>
      </div>
    </div>
  </body>

</html>
